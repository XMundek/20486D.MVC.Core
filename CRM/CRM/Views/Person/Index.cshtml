@model CRM.Model.PersonIndexModel

@{
    ViewData["Title"] = "List";
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<form>
    LastName: @Html.EditorFor(m => m.LastName)
    <button type="submit" >Search</button>
</form>
@if(Model?.People?.Length>0){
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.People[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.People[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.People[0].BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.People[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.People[0].Id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.People)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
}
